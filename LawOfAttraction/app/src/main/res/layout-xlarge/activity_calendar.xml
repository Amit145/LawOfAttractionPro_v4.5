<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232635 "
    android:orientation="vertical"
    android:weightSum="5"
    tools:context="com.apps.amit.lawofattraction.calendar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0"
       >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/activityTracker_text1"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0"
        >

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/activityTracker_text2"
            android:textAlignment="center"
            android:textColor="#f7dc6f"
            android:textSize="50sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_weight="4"
        android:layout_marginTop="10dp">

       <android.support.v7.widget.RecyclerView
           android:id="@+id/recyclerView"
           android:layout_width="match_parent"
           android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/caltrack"
            android:layout_weight=".5"
            android:layout_width="450dp"
            android:layout_marginTop="30dp"
            android:text="@string/activityTracker_text3"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/buton"
            android:fontFamily="@font/abeezee"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView8"
        android:layout_marginTop="25dp"
        android:layout_weight=".5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />

    </LinearLayout>

</LinearLayout>
