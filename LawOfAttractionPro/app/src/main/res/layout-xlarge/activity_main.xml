<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:background="#232635"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="#EFFBFB"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/abeezee"
                android:textAlignment="center"
                android:textColor="#797575"
                android:textSize="60sp"
                android:textStyle="bold"
                tools:text="Song Title" />

            <TextView
                android:id="@+id/song_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/abeezee"
                android:textColor="#909090"
                android:textSize="40sp"
                android:textStyle="bold|italic"
                tools:text="Song Artist" />

            <com.apps.amit.lawofattractionpro.MediaSeekBar
                android:id="@+id/seekbar_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:paddingTop="16dp"
                />




            <ImageButton
                android:id="@+id/button_play"
                android:layout_width="500dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/buttrack"
                android:fontFamily="@font/abeezee"
                android:src="@drawable/ic_play"
                android:textColor="#ffffff"
                android:textStyle="bold" />

       ext=""
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/abeezee"
                android:textColor="#909090"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="NOTE - Depending on your Internet Speed and Connectivity, Music may stop or may take some time to load. Please make sure you have a good Internet connection to avoid any interruptions" />





        </LinearLayout>

    </ScrollView>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:background="#9217171B"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/taskShareId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="taskShare"
            android:scaleX="1"
            android:src="@drawable/crop" />


    </LinearLayout>

</LinearLayout>